#!/bin/sh

[ ! -z $(command -v fzf) ]       && alias b="WD=\$(pwd);cd ~/Documents/library;zathura \"\$(fzf)\";cd \$WD"
[ ! -z $(command -v lsd) ]       && alias ls="lsd -l"
[ ! -z $(command -v trash-put) ] && alias rm="trash-put"

alias aliasrc="vim $HOME/.config/aliasrc"
alias db="gdb --tui"
alias dirh="dirs -v"
alias fm="ranger ."
alias g="git"
alias gP="git push"
alias ga="git add"
alias gc="git commit"
alias gcl="git clone"
alias gd="git diff --output-indicator-new=' ' --output-indicator-old=' '"
alias gdb="gdb -tui"
alias gi="git init"
alias gl="git log --all --graph --pretty=format:'%C(magenta)%h %(white) %an %ar%C(auto) %D%n%s%n'"
alias gm="mbsync -c ~/.config/mu4e/mbsyncrc -a"
alias gp="git pull"
alias less="/usr/share/vim/runtime/macros/less.sh"
alias m="aerc"
alias ml="matlab -nodesktop"
alias nb="newsboat"
alias pm="pulsemixer"
alias qf="cd \$(quickfind)"
alias re="systemctl --user restart emacs.service"
alias rl="roslaunch"
alias s="ncspot"
alias shuffle="mpv --shuffle"
alias sp="source $HOME/.profile"
alias sz="source $HOME/.config/zsh/.zshrc"
alias task="go-task"
alias tmux="tmux -2"
alias v="vim"
alias vimrc="cd ~/.config/vim && vim $HOME/.config/vim/init.vim"
alias vp="vim $HOME/.profile"
alias vs="vim -S .vs"
alias vw="vim -c VimwikiIndex"
alias weather="curl http://wttr.in"
alias yt="yt-dlp"
alias z="zathura"
alias zshrc="vim ~/.config/zsh/.zshrc"

# Flatpak
[ ! -z $(command -v flatpak) ] && flatpak list --app | grep -q "FreeCAD" && alias freecad="flatpak run org.freecad.FreeCAD"
[ ! -z $(command -v flatpak) ] && flatpak list --app | grep -q "ncspot" && alias ncspot="flatpak run io.github.hrkfdn.ncspot"
[ ! -z $(command -v flatpak) ] && flatpak list --app | grep -q "Minecraft" && alias minecraft="flatpak run com.mojang.Minecraft"
