#!/bin/zsh

###############################################################################
# Variables
###############################################################################
install_path="${HOME}/.local/bin/yt-dlp"

###############################################################################
# Script
###############################################################################
rm -f ${install_path}
curl -L https://github.com/yt-dlp/yt-dlp/releases/latest/download/yt-dlp -o ${install_path}
chmod a+rx ${install_path}  # Make executable
