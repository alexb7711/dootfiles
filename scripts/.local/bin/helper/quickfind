#!/bin/sh

# Determine where to start search from
DIR=$(
        if dmenu -v > /dev/null 2>&1
        then
                find "${HOME}" -maxdepth 5 -type d |
                dmenu -l 30 -p "Project: "
        else
                find "${HOME}" -maxdepth 5 -type d | fzf
        fi
)

[ ! -z "${DIR}" ] && echo "${DIR}"
